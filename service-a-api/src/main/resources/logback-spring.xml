<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <appender name="CONSOLE_WITH_CORRELATION" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger [corrId=%X{correlationId}] - %msg%n</pattern>
            <charset>${CONSOLE_LOG_CHARSET:-${file.encoding:-UTF-8}}</charset>
        </encoder>
    </appender>

    <logger name="fi.kranu.servicea.controller" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE_WITH_CORRELATION" />
    </logger>

    <logger name="fi.kranu.servicea.CorrelationIdFilter" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE_WITH_CORRELATION" />
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
